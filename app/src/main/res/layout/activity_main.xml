<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/glassmorphism_wallpaper2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center|right"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="0"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="#00FFFFFF"
        android:textSize="75sp"
        android:inputType="none" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glassmorphism_table">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_7"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_4"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                app:backgroundTint="#0DFF0084"
                app:backgroundTintMode="screen"
                android:layout_margin="1dp"
                android:onClick="eventHapus"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_1"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphism_button"
                android:layout_margin="1dp"
                android:onClick="numberPress"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_input"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:background="@drawable/glassmorphism_button"
                app:backgroundTint="#0D64DD17"
                app:backgroundTintMode="screen"
                android:layout_margin="1dp"
                android:layout_marginLeft="8dp"
                android:onClick="input"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_home"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_left"
                android:onClick="homeButtonClick"
                android:stateListAnimator="@android:animator/fade_in"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_laporan"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_right"
                android:onClick="laporanButtonClick"
                android:stateListAnimator="@android:animator/fade_in"
                android:text="Laporan"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </TableRow>

    </TableLayout>
</LinearLayout>